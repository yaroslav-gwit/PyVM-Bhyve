#!/opt/hoster-red/venv/bin/python3
import sys
from os.path import exists

if exists("/opt/PyVM-Bhyve/") and exists("/opt/PyVM-Bhyve/hoster"):
    sys.path.insert(1, "/opt/PyVM-Bhyve/")
else:
    print("SysChecks is not installed properly!", file=sys.stderr)
    sys.exit(1)

from main import app

import os
os.chdir("/opt/PyVM-Bhyve/")

app()
